{
  "pluginAlias": "Hoffmation",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "Example Dynamic Platform"
      },
      "serverAddress": {
        "title": "Server Address",
        "type": "string",
        "required": true,
        "default": "http://localhost:3000"
      },
      "useRtspStream": {
        "title": "Use Rtsp Stream",
        "type": "boolean",
        "required": true,
        "default": true
      },
      "useAcDevices": {
        "title": "Allow controlling/monitoring of AC devices",
        "type": "boolean",
        "required": true,
        "default": true
      },
      "useCameraDevices": {
        "title": "Allow controlling/monitoring of Camera devices",
        "type": "boolean",
        "required": true,
        "default": true
      },
      "useGarageDoorDevices": {
        "title": "Allow controlling/monitoring of Garage Door Opener devices",
        "type": "boolean",
        "required": true,
        "default": false
      },
      "useLampDevices": {
        "title": "Allow controlling/monitoring of Lamp devices",
        "type": "boolean",
        "required": true,
        "default": true
      },
      "useActuatorDevices": {
        "title": "Allow controlling/monitoring of Actuator devices",
        "type": "boolean",
        "required": true,
        "default": true
      },
      "useSceneDevices": {
        "title": "Allow controlling/monitoring of Scene devices",
        "type": "boolean",
        "required": true,
        "default": true
      },
      "useTemperatureDevices": {
        "title": "Allow controlling/monitoring of Temperature devices",
        "type": "boolean",
        "required": true,
        "default": true
      },
      "useShutterDevices": {
        "title": "Allow controlling/monitoring of Shutter devices",
        "type": "boolean",
        "required": true,
        "default": true
      },
      "useMotionSensorDevices": {
        "title": "Allow monitoring of Motions Sensor devices (except cameras)",
        "type": "boolean",
        "required": true,
        "default": true
      }
    }
  }
}
